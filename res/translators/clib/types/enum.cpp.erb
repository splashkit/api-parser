<%#
    Enums are converted to their integer representations using static casts.
    Use the `__make_enum_adapter' macro to make adapter functions to
    and from the SK and Lib enums.
 %>
#define <%= func_prefix %>__make_enum_adapter(type)\
typedef int __sklib_##type;\
int <%= func_prefix %>__to_sklib_##type(type v) { return static_cast<int>(v); }\
type <%= func_prefix %>__to_##type(int v) { return static_cast<type>(v); }
<%
  @enums.each do |enum|
%>
<%= func_prefix %>__make_enum_adapter(<%= enum[:name] %>)
<%
  end # end enums.each
%>
